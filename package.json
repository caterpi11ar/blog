    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "cz": "cz",
    "typecheck": "tsc --noEmit",
    "lint:fix": "pnpm dlx eslint . --ext .ts,.tsx,.astro,.md,.mdx --fix --cache"
  },
  "dependencies": {
    "@astrojs/check": "^0.2.0",
    "@astrojs/rss": "^3.0.0",
