    "astro": "^3.6.4",
    "fuse.js": "^6.6.2",
    "github-slugger": "^2.0.0",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.10.8",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.18.0",
    "@astrojs/mdx": "^2.0.3",
    "@astrojs/react": "^3.0.2",
    "@astrojs/sitemap": "^3.0.3",
    "@astrojs/tailwind": "^5.0.0",
