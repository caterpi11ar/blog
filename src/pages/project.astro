---
import Footer from '@components/Footer.astro'
import Header from '@components/Header.astro'
import { SITE } from '@config'
import Layout from '@layouts/Layout.astro'
import Main from '@layouts/Main.astro'

interface Project {
  name: string
  description: string
  link: string
}

const project: Project[] = [
  {
    name: '微信聊天成器',
    description: '微信聊天记录生成器，支持自定义用户信息、发送消息并实时预览聊天效果，还可以导出为高清图片。',
    link: 'https://wechat.caterpi11ar.com/',
  },
  {
    name: '性压抑测评',
    description: '专业的性心理健康自我评估工具，基于多个经过验证的心理测量量表， 帮助您科学地了解自己的性心理特征，促进性健康和亲密关系的发展。',
    link: 'https://sexual.caterpi11ar.com/',
  },
  {
    name: 'locusify',
    description: '一款智能旅行工具——上传原始照片，自动获取视觉路线图，以及流畅捕捉精彩瞬间的Vlog。',
    link: 'https://locusify.caterpi11ar.com/',
  },
  {
    name: 'Dentic',
    description: '用科学的方式养成终身刷牙好习惯。基于3D牙齿模型与定时分区引导，帮助你真正刷对牙。',
    link: 'https://dentic.caterpi11ar.com/',
  },
  {
    name: 'Viper',
    description: '面向 TypeScript 的轻量级配置管理库，灵感来自 Go 的 Viper，基于 Zod 和 JSON5 构建，支持类型安全的配置读取。',
    link: 'https://viper.caterpi11ar.com/',
  },
  {
    name: '飞书绘画机器人',
    description: '集成 AI 绘画能力的飞书/Lark 机器人，在飞书工作空间内直接调用 AI 生成图片和艺术创作。',
    link: 'https://github.com/caterpi11ar/lark-imagine-robot',
  },
  {
    name: 'AI System Prompts',
    description: '收录 30+ AI 编程工具的完整系统提示词——Claude Code、Cursor、Devin、Windsurf、v0 等，可搜索、可浏览。',
    link: 'https://ai.caterpi11ar.com/',
  },
];
---

<Layout title={`Project | ${SITE.title}`}>
  <Header activeNav="project" />
  <Main pageTitle="Project" pageDesc="All the projects.">
    <ul class="flex flex-col gap-y-4">
      {
        project.map((project) => {
          return (
            <a
              href={project.link}
              target="_blank"
              class="flex flex-col rounded-lg border border-gray-200 p-4 transition hover:border-[#006cac] hover:shadow-md dark:border-gray-700"
            >
              <>
                <div class="flex-1">
                  <>
                    <div class="text-xl font-semibold">
                      {project.name}
                    </div>
                    <div class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                      <p class="mb-1">{project.description}</p>
                    </div>
                  </>
                </div>
                <div class="mt-3 text-sm font-medium text-[#006cac]">
                  View →
                </div>
              </>
            </a>
          )
        })
      }
    </ul>
  </Main>
  <Footer />
</Layout>
