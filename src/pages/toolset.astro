---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import { SITE } from "@config";
import Main from "@layouts/Main.astro";

const toolset = [
  {
    name: "Git Commit",
    description: "Generate a commit message for your changes",
    link: "/toolset/gitcommit",
  },
];
---

<Layout title={`Toolset | ${SITE.title}`}>
  <Header activeNav="toolset" />
  <Main pageTitle="Toolset" pageDesc="All the tools used in toolset.">
    <ul>
      {
        toolset.map((tool) => {
          return (
            <a
              href={tool.link}
              class="flex flex-col rounded-lg border border-gray-200 p-4 transition hover:border-[#006cac] hover:shadow-md dark:border-gray-700"
            >
              <>
                <div class="flex-1">
                  <>
                    <div class="text-xl font-semibold">
                      {tool.name}
                    </div>
                    <div class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                      <p class="mb-1">{tool.description}</p>
                    </div>
                  </>
                </div>
                <div class="mt-3 text-sm font-medium text-[#006cac]">
                  View documentation â†’
                </div>
              </>
            </a>
          );
        })
      }
    </ul>
  </Main>
  <Footer />
</Layout>
